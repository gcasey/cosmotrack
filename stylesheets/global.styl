 * If a style is specific to a single view, put it elsewhere.
 */

$title-color = #555

body
  padding-top 20px

h2.ct-view-header
  color $title-color
  margin 0
  font-size 22px

h3.ct-accordion-header
  font-size 13px

.ct-empty-set-message
  color title-color
  font-style italic

.ct-modal-title
  font-size 16px
  color $title-color
  font-weight bold

a
  cursor pointer
