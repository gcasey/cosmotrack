/*
 * Styles that apply globally across the application belong in this file.
 * If a style is specific to a single view, put it elsewhere.
 */

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

$titleColor = #555

body
  padding-top 20px

h2.ct-view-header
  color $titleColor
  margin 0 0 8px
  font-size 22px
  line-height 1

h3.ct-accordion-header
  font-size 13px

.ct-empty-set-message
  color title-color
  font-style italic

.ct-modal-title
  font-size 16px
  color $titleColor
  font-weight bold

a
  cursor pointer

.nav-tabs > li a
  color #222

/*
 * Widget customization: ct-action-list-widget
 */
$listBorderRadius = 4px

ul.ct-action-list-widget
  margin 0
  padding 0
  box-shadow 0 1px 4px 0 rgba(0,0,0,0.1)
  border-radius $listBorderRadius
  > li > a
    display block
    margin 0 0 -1px
    padding 6px 12px
    border 1px solid #e5e5e5
  > li:first-child > a
    border-radius $listBorderRadius $listBorderRadius 0 0
  > li:last-child > a
    border-radius 0 0 $listBorderRadius $listBorderRadius
  > li.active > a
    position relative
    z-index 2
    padding 7px 13px
    border 0
  > li > a > .icon-chevron-right
    float right
    margin-top 2px
    margin-right -6px
    opacity .4
  > li:hover > a > .icon-chevron-right
    opacity .7
  > li.active > a > .icon-chevron-right
    opacity 1

/*
 * Rules for scaffolding tables
 */
.ct-table-cell
  min-height 0 !important
  padding 6px
