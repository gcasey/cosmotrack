div.ct-result-container
  font-size 13px
  padding 1em 1.3em !important

div.ct-analysis-wrapper
  margin-top 10px

ul.ct-analysis-list
  margin-top 10px
  padding 0

  .icon-chevron-right
    float right
    margin-top 2px
    margin-right -6px
    opacity .25

ul.ct-analysis-list > li > a
  display block
  margin 0 0 -1px
  padding 6px 12px
  border 1px solid #e5e5e5

ul.ct-analysis-list > .active > a
  position relative
  z-index 2
  padding 7px 13px
  border 0
